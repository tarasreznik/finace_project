<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FinanceProject" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/toxic</item>
        <item name="android:statusBarColor">@color/toxic</item>
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme" parent="Base.Theme.FinanceProject">
        <item name="colorPrimary">@color/toxic</item>
        <item name="colorOnContainer">@color/white</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>
</resources>