<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FinanceProject" parent="Theme.MaterialComponents.NoActionBar" />

    <style name="AppThemeDefault" parent="Base.Theme.FinanceProject">
        <item name="colorPrimary">@color/toxic</item>
        <item name="colorSecondary">@color/toxic</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="AppThemeTitle" parent="Base.Theme.FinanceProject">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>
</resources>